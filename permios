REVOKE permisos ON base_de_datos.tabla FROM 'usuario'@'host';

REVOKE SELECT, INSERT, UPDATE, DELETE ON exampledb.* FROM 'exampleuser'@'localhost';

FLUSH PRIVILEGES;

EXIT;



